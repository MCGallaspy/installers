#!/bin/sh

if [ -f /etc/ka-lite/conf.d/username ]
then
  export KALITE_USER=`cat /etc/ka-lite/conf.d/username`
  if [ "$KALITE_USER" = "" ]
  then
    export KALITE_USER="ka-lite"
  fi
else
  export KALITE_USER="ka-lite"
fi

if [ -f /etc/ka-lite/conf.d/server_options ]
then
  export KALITE_OPTS=`cat /etc/ka-lite/conf.d/server_options`
else
  export KALITE_OPTS=""
fi

export KALITE_COMMAND="kalite"
