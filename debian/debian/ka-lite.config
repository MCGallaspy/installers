#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

# Run as system script?
db_input high ka-lite/init || true
db_go

# Check their answer.
db_get ka-lite/init
if [ "$RET" = "true" ]; then
    db_input high ka-lite/user || true
    db_go
    db_input high ka-lite/init-instructions
    db_go
else
    db_input high ka-lite/manual || true
    db_go
    db_input high ka-lite/manual-instructions
    db_go
fi

# Ask about downloading assessment items...
db_input high ka-lite/download-assessment-items || true
db_go
